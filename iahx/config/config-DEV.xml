<?xml version="1.0"?>
<dia_config>
	<site>solr/scielo</site>
	<bvs_url>http://www.scielo.org/</bvs_url>
	<about_bvs_url>http://www.scielo.org/php/level.php?lang=pt&amp;component=56&amp;item=8</about_bvs_url>
	<home_url>http://www.scielo.org/</home_url>
	<search_server>localhost:8080</search_server>
	<photocopy_url/>
	<documents_per_page>20</documents_per_page>
    <max_export_records>2000</max_export_records>
	<default_lang>pt</default_lang>
	<log_user_search>true</log_user_search>
	<log_dir>./logs/</log_dir>
	<environment>development</environment>
	<addthis_pub></addthis_pub>
	<addthis_buttons>
		<button>facebook</button>
		<button>twitter</button>
		<button>delicious</button>
	</addthis_buttons>
	<show_related_docs>false</show_related_docs>
	<related_min_score>40</related_min_score>
	<google_analytics_tracking_id></google_analytics_tracking_id>
	<maintenance>false</maintenance>
	<feedback_id></feedback_id>
	<browse_index_url></browse_index_url>
	<mobile_version>false</mobile_version>

	<search_collection_list>
		<collection>
			<name>articles</name>
			<cluster_items_limit>10</cluster_items_limit>
			<initial_filter></initial_filter>
			<index_list>
				<index>
					<name>ALL</name>
					<prefix></prefix>
				</index>
				<index>
					<name>TI</name>
					<prefix>ti</prefix>
				</index>
				<index>
					<name>AU</name>
					<prefix>au</prefix>
				</index>
				<index>
					<name>AB</name>
					<prefix>ab</prefix>
				</index>
				<index>
					<advanced/>
					<name>SP</name>
					<prefix>sponsor</prefix>
				</index>
			</index_list>
			<where_list>
				<where>
					<name>ORG</name>
					<filter></filter>
				</where>
				<where>
					<name>ARG</name>
					<filter>in:("arg")</filter>
				</where>
				<where>
					<name>SCL</name>
					<filter>in:("scl")</filter>
				</where>
				<where>
					<name>CHL</name>
					<filter>in:("chl")</filter>
				</where>
				<where>
					<name>COL</name>
					<filter>in:("col")</filter>
				</where>
				<where>
					<name>CRI</name>
					<filter>in:("cri")</filter>
				</where>
				<where>
					<name>CUB</name>
					<filter>in:("cub")</filter>
				</where>
				<where>
					<name>ESP</name>
					<filter>in:("esp")</filter>
				</where>
				<where>
					<name>MEX</name>
					<filter>in:("mex")</filter>
				</where>
				<where>
					<name>PRT</name>
					<filter>in:("prt")</filter>
				</where>
				<where>
					<name>VEN</name>
					<filter>in:("ven")</filter>
				</where>
				<where>
					<name>SPA</name>
					<filter>in:("spa")</filter>
				</where>
				<where>
					<name>SSS</name>
					<filter>in:("sss")</filter>
				</where>
				<where>
					<name>SZA</name>
					<filter>in:("sza")</filter>
				</where>
			</where_list>
			<sort_list>
				 <sort>
					 <name>RELEVANCE</name>
					 <value>score desc</value>
				 </sort>
				 <sort>
				 	 <default_for_empty_query>1</default_for_empty_query>
					 <name>YEAR_DESC</name>
					 <value>da desc</value>
				 </sort>
				 <sort>
					 <name>YEAR_ASC</name>
					 <value>da asc</value>
				 </sort>
			</sort_list>
            <format_list>
            	<format>
            		<name>summary</name>
            	</format>
            </format_list>
            <!-- restrict list of clusters to show on result. If not set show all availables on solrconf.xml -->
            <!--cluster_list>
                <cluster>collection</cluster>
                <cluster>tag_brasil</cluster>
            </cluster_list-->
		</collection>
	</search_collection_list>
</dia_config>
